<div data-hook="new_product_msrp" class="col-md-12" style='padding: 0px;'>
  <%= f.field_container :msrp, :class => ['form-group'] do %>
    <%= f.label :msrp, Spree.t(:msrp) %> <span class="required">*</span><br />
    <%= f.text_field :msrp, :value => number_to_currency(@product.msrp, :unit => ''), :class => 'form-control' %>
    <%= f.error_message_on :msrp %>
  <% end %>
</div>
